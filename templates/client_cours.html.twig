{% extends 'client_base.html.twig' %}

{% block title %}ESPRAT | Courses{% endblock %}

{% block body %}
     {% for cours in cours %}
    <div class="tab-pane fade-in active" id="class-1" role="tabpanel">
        <div class="single-class-item">
            <div class="row">
                <div class="col-lg-6" align="center">
                    <img src="{{ asset('adminSalle/img/' ~ cours.image) }}" height="80%" width="80%" alt="">
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="class-text">
                        <h3>Nom: {{cours.nom}}</h3><br>
                        <h3>Description: {{cours.description}}</h3><br>
                        <h3>Niveau: {{cours.niveau}}</h3>
                        <br>
                        <div class="col-lg-6">
<a href="{{ path('client_exercices', {'courseId': cours.id}) }}">Voir les exercices <i class="fa fa-long-arrow-right"></i></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br><br>
      {% endfor %}
{% endblock %}
