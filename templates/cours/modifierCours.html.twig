{% extends 'coach_base.html.twig' %}

{% block title %}Modifier un Cours{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .white-text {
            color: white;
        }

        .white-background {
            background-color: white;
        }

        .custom-input {
            border: 1px solid #ced4da; /* Ajoute une bordure grise */
            border-radius: .25rem; /* Ajoute un arrondi aux coins */
        }

        /* Style pour le focus */
        .custom-input:focus {
            border-color: #dc3545; /* Change la couleur de la bordure au focus */
            box-shadow: 0 0 0 0.2rem rgba(220,53,69,0.25); /* Ajoute une ombre au focus */
        }

        /* Centrer le contenu */
        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh; /* Pour centrer verticalement */
        }
        .image-container {
            margin-top: 50px; /* Ajoute une marge en haut pour déplacer l'image */
            margin-bottom: 50px; /* Ajoute une marge en bas pour déplacer l'image */
        }
        .title-spacing {
            margin-bottom: 20px; /* Ajoute un espacement entre le titre et les champs */
        }

    input[type='radio'] {
        margin-right: 50px; /* Ajustez cette valeur pour changer l'espacement */
    }


    </style>

    
{% endblock %}

{% block body %}
    <body class="center-content"> {# Ajout de la classe center-content ici #}
        <div class="container">
            <div class="row justify-content-center mt-4 title-spacing"> {# Ajout de la classe title-spacing ici #}
                <div class="col-md-12 text-center">
                    <h1>Modifier un Cours</h1> {# Modification du titre ici #}
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    {{ form_start(form) }}
                    <div class="mb-3 row align-items-center">
                        <div class="col-md-3">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label white-text'}}) }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control white-background white-text custom-input'}}) }}
                        </div>
                    </div>
                    <div class="mb-3 row align-items-center">
                        <div class="col-md-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label white-text'}}) }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control white-background white-text custom-input'}}) }}
                        </div>
                    </div>
                <div class="mb-3 row align-items-center">
    <div class="col-md-3">
        {{ form_label(form.niveau, 'Niveau', {'label_attr': {'class': 'form-label white-text'}}) }}
    </div>
    <div class="col-md-9">
        {{ form_widget(form.niveau) }}
    </div>
</div>

             
                
                    <div class="mb-3 row align-items-center">
                        <div class="col-md-3">
                            {{ form_label(form.user, 'User', {'label_attr': {'class': 'form-label white-text'}}) }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(form.user, {'attr': {'class': 'form-control white-background white-text custom-input'}}) }}
                        </div>
                    </div>
                    <div class="mb-3 row align-items-center">
                        <div class="col-md-3">
                            {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label white-text'}}) }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(form.image, {'attr': {'class': 'form-control white-background white-text custom-input'}}) }}
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </div>
                    {{ form_end(form) }}
                </div>
                <div class="col-md-6 text-center image-container"> {# Ajout de la classe image-container ici #}
                    <img src="{{ asset('adminSalle/img/muscle.png') }}" alt="Description de l'image" class="img-fluid">
                </div>
            </div>
        </div>
    </body>
{% endblock %}
