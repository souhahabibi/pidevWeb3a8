<!DOCTYPE html>

<title>Reviewmeal index</title>

{% block body %}
    <h1>Reviewmeal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rate</th>
                <th>Comment</th>
                <th>CreatedDate</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reviewmeal in reviewmeals %}
            <tr>
                <td>{{ reviewmeal.id }}</td>
                <td>{{ reviewmeal.rate }}</td>
                <td>{{ reviewmeal.comment }}</td>
                <td>{{ reviewmeal.createdDate ? reviewmeal.createdDate|date('Y-m-d') : '' }}</td>
                <td>{{ reviewmeal.name }}</td>
                <td>
                    <a href="{{ path('app_reviewmeal_show', {'id': reviewmeal.id}) }}">show</a>
                    <a href="{{ path('app_reviewmeal_edit', {'id': reviewmeal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reviewmeal_new') }}">Create new</a>
