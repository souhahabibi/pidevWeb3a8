{% extends 'client_base.html.twig' %}
{% block title %}
Abonnements
{% endblock %}

{% block page %}

{% endblock %}


{% block body %}

<section class="about-page-trainer spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Our Subscriptions</h2>
                    <p>Unlock your fitness potential with our gym subscriptions. Gain access to state-of-the-art equipment, expert-led classes, and personalized training programs tailored to your goals.</p>
                </div>
            </div>
        </div>
        <div class="row">
            {% for a in list %}
            <div class="col-lg-3 col-sm-6 mb-4">
                <!-- Enhanced styling for the subscription boxes -->
                <div class="single-trainer-item" style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); border: 1px solid #e3e3e3;">
                    <div class="trainer-social">
                        <h6>            <img src="{{ asset('uploads/images/hourglass.png') }}" alt="Open Image" style="width: 40px; height: 40px; margin-right: 5px;"> {{ a.duree }} Months</h6>
                    </div>
                    <div class="trainer-text">
                        {% set discount = valeur > 0 ? valeur / 100 : 0 %}
                        {% set new_price = discount > 0 ? a.montant - (a.montant * discount) : a.montant %}
                    

<div class="trainer-social" style="font-weight: bold;">
 {% if discount > 0 %}
    <h6 style="color: #4caf50;"> <img src="{{ asset('uploads/images/coupon.png') }}" alt="Open Image" style="width: 40px; height: 40px; margin-right: 5px;">: -{{ discount * 100 }}%</h6>
{% endif %}
<hr> </hr>
<h5>
   <h6> le changement du prix:</h6><hr> 
    {% if discount > 0 %}
        <span style="color: black; position: relative;"><h5>{{ a.montant }} DT </h5><span style="position: absolute; bottom: 0%;left: 20%; transform:rotate(-10deg); translate(-70%, -50%);  width: 50%; height: 1.8px; background-color: red;"></span></span> <h5>{{ new_price }} DT</h5>
    {% else %}
        {{ a.montant }} DT
    {% endif %}
</h5>



                        </div>
<div class="trainer-social" style="font-weight: bold;">
                        <p style="min-height: 120px; overflow: hidden; text-overflow: ellipsis;">{{ a.description }}</p>
                        </div>
                        <div class="trainer-social" style="text-align: center; padding-top: 10px;">
                            <a href="#"><button type="button" class="primary-btn">Contact Us</button></a>
                        </div>
                        
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
 