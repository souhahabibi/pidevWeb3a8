{% extends 'client_base.html.twig' %}

{% block title %}ESPRAT | BMI{% endblock %}

{% block body %}
  <!-- Site Breadcrumb Begin -->
   
    <!-- Site Breadcrumb End -->
 <!-- BMI Calculator Section Begin -->
 <section class="bmi-calculator-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title chart-title">
                    <span>check your body</span>
                    <h2>BMI CALCULATOR CHART</h2>
                </div>
                <div class="chart-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Bmi</th>
                                <th>WEIGHT STATUS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="point">Below 18.5</td>
                                <td>Underweight</td>
                            </tr>
                            <tr>
                                <td class="point">18.5 - 24.9</td>
                                <td>Healthy</td>
                            </tr>
                            <tr>
                                <td class="point">25.0 - 29.9</td>
                                <td>Overweight</td>
                            </tr>
                            <tr>
                                <td class="point">30.0 - and Above</td>
                                <td>Obese</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="section-title chart-calculate-title">
                    <span>check your body</span>
                    <h2>CALCULATE YOUR BMI</h2>
                </div>
                <div class="chart-calculate-form">
                    <p>A Body Mass Index (BMI) measures an individual's body fat based on weight and height.
                        It can be a valuable tool for assessing the risk of developing weight-related health problems,
                        but it may not be accurate for all individuals. So let's start the test!.</p>
                    <form action="#">
                        <div class="row">
                            <div class="col-sm-6">
                                <input type="text" placeholder="Height / cm">
                            </div>
                            <div class="col-sm-6">
                                <input type="text" placeholder="Weight / kg">
                            </div>
                            <div class="col-lg-12">
                                <button type="submit">Calculate</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- BMI Calculator Section End -->

<!-- Get In Touch Section Begin -->


<script>
        document.addEventListener("DOMContentLoaded", function () {
            // Get form and input elements
            var form = document.querySelector('.chart-calculate-form form');
            var heightInput = document.querySelector('input[placeholder="Height / cm"]');
            var weightInput = document.querySelector('input[placeholder="Weight / kg"]');
            var resultDiv = document.createElement('div');
            resultDiv.style.marginTop = '10px'; // Example margin top
resultDiv.style.padding = '10px'; // Example padding
resultDiv.style.backgroundColor = '#f0f0f0'; // Example background color
resultDiv.style.border = '1px solid #ccc'; // Example border
resultDiv.style.borderRadius = '5px'; // Example border radius
resultDiv.style.fontFamily = 'Arial, sans-serif'; // Example font family
resultDiv.style.fontSize = '16px'; // Example font size
resultDiv.style.color = '#333'; // Example text color

            form.addEventListener('submit', function (event) {
                event.preventDefault(); // Prevent form submission

                // Get input values
                var height = parseFloat(heightInput.value);
                var weight = parseFloat(weightInput.value);

                // Check if inputs are valid numbers
                if (isNaN(height) || isNaN(weight)) {
                    resultDiv.textContent = "Please enter valid height and weight.";
                    return;
                }

                // Calculate BMI
                var bmi = calculateBMI(height, weight);

                // Display result
                resultDiv.textContent = "Your BMI is: " + bmi.toFixed(2); // Displaying BMI with 2 decimal places
            });

            // Helper function to calculate BMI
            function calculateBMI(height, weight) {
                // Formula for BMI: weight (kg) / (height (m))^2
                var heightMeters = height / 100; // Convert height from cm to meters
                return weight / (heightMeters * heightMeters);
            }

            // Append result div to the form
            form.appendChild(resultDiv);
        });
    </script>
{% endblock %}