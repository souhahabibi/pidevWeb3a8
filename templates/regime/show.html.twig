{% block title %}Regime{% endblock %}

{% block body %}
    <h1>Regime</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Startdate</th>
                <td>{{ regime.startdate|date("m/d/Y") }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ regime.enddate|date("m/d/Y") }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ regime.duration }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ regime.description }}</td>
            </tr>
            <tr>
                <th>Goal</th>
                <td>{{ regime.goal }}</td>
            </tr>
