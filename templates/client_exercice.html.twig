{% extends 'client_base.html.twig' %}

{% block title %}ESPRAT | Exercices{% endblock %}

{% block body %}
     {% for exercices in exercices %}
    <div class="tab-pane fade-in active" id="class-1" role="tabpanel">
        <div class="single-class-item">
            <div class="row">
                <div class="col-lg-6" align="center">
                    <img src="{{ asset('adminSalle/img/' ~ exercices.image) }}" height="80%" width="80%" alt="">
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="class-text">
                        <h3>Nom: {{exercices.nom}}</h3><br>
                        <h3>Etapes: {{ exercices.etape|nl2br }}</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br><br>
      {% endfor %}
{% endblock %}
