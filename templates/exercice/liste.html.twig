{% extends 'coach_base.html.twig' %}

{% block title %}Liste des Exercice {% endblock %}

{% block body %}
    <h1>Liste des exercices</h1>
    <a href="{{ path('ajouter_exercice') }}" class="btn btn-primary">Ajouter un exercice</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Etape</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for exercice in exercice %}
                <tr>
                    <td>{{ exercice.nom }}</td>
                    <td>{{ exercice.etape }}</td>
                    <td>
                        {% if exercice.image %}
                            <img src="{{ asset('adminSalle/img/' ~ exercice.image) }}" alt="Image du cours" style="max-width: 100px; max-height: 100px;">
                        {% else %}
                            Pas d'image
                        {% endif %}
                    </td>
                    <td>
                       
                       <a href="{{ path('modifier_exercice', {'id': exercice.idE}) }}" class="btn btn-primary">Modifier</a>
                       <a href="{{ path('exercice_supprimer', {'id': exercice.idE}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')">Supprimer</a>


                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
