{% extends 'coach_base.html.twig' %}

{% block title %}Ingredients{% endblock %}

{% block body %}
    <h1>Ingredients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Calories</th>
                <td>{{ ingredient.calories }}</td>
            </tr>
            <tr>
                <th>TotalFat</th>
                <td>{{ ingredient.totalFat }}</td>
            </tr>
            <tr>
                <th>Protein</th>
                <td>{{ ingredient.protein }}</td>
            </tr>
            <tr>
                <th>Imgurl</th>
                <td>
                {% if ingredient.imgurl %}
                 <img src="{{ asset('uploads/image/' ~ ingredient.imgurl) }}"  style="max-width: 100px; max-height: 100px;">
                        {% else %}
                            Pas d'image
                        {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ingredients_index') }}">back to list</a>

    <a href="{{ path('app_ingredients_edit', {'id': ingredient.id}) }}">edit</a>

    {{ include('ingredients/_delete_form.html.twig') }}
{% endblock %}
