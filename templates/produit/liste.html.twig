{% extends 'admin_base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>
    <a href="{{ path('produit_ajouter') }}" class="btn btn-primary">Ajouter un produit</a>

    {# Barre de recherche #}
    <form action="{{ path('search_produit') }}" method="GET" class="mt-3 mb-3">
        <div class="input-group">
            <input type="text" name="search_term" class="form-control" placeholder="Rechercher...">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>

    {% if produits is empty %}
        <p>Aucun produit trouvé.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Quantité</th>
                    <th>Coût</th>
                    <th>Date d'expiration</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Fournisseur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.quantite }}</td>
                        <td>{{ produit.cout }}</td>
                        <td>{{ produit.dateExpiration ? produit.dateExpiration|date('Y-m-d') : 'N/A' }}</td>
                        <td>{{ produit.description }}</td>
                        <td>
                            {% if produit.image %}
                                <img src="{{ asset('adminSalle/img/' ~ produit.image) }}" alt="Image du produit" style="max-width: 100px; max-height: 100px;">
                            {% else %}
                                Pas d'image
                            {% endif %}
                        </td>
                        <td>{{ produit.idFournisseur }}</td>
                        <td>
                            <a href="{{ path('modifier_produit', {'id': produit.idProduit}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('produit_supprimer', {'id': produit.idProduit}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
