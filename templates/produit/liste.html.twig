{% extends 'admin_base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <form action="{{ path('search_produit') }}" method="GET">
        <div class="form-group">
            <label for="search_term">Rechercher un produit :</label>
            <input type="text" class="form-control" id="search_term" name="search_term" placeholder="Entrez un terme de recherche">
        </div>
        <button type="submit" class="btn btn-primary">Rechercher</button>
    </form>

    <table class="table">
        <!-- Table headers -->
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Quantité</th>
                <th scope="col">Coût</th>
                <th scope="col">Date d'expiration</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Fournisseur</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in produits %}
                <!-- Table rows for each product -->
                <tr>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.quantite }}</td>
                    <td>{{ produit.cout }}</td>
                    <td>{{ produit.dateExpiration ? produit.dateExpiration|date('Y-m-d') : 'N/A' }}</td>
                    <td>{{ produit.description }}</td>
                    <td>
                        {% if produit.image %}
                            <img src="{{ asset('adminSalle/img/' ~ produit.image) }}" alt="Image du produit" style="max-width: 100px; max-height: 100px;">
                        {% else %}
                            Pas d'image
                        {% endif %}
                    </td>
                    <td>{{ produit.idFournisseur }}</td>
                    <td>
                        <a href="{{ path('modifier_produit', {'id': produit.idProduit}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('produit_supprimer', {'id': produit.idProduit}) }}" class="btn btn-primary">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            <!-- Display a message if no products found -->
            {% if produits is empty %}
                <tr>
                    <td colspan="8">Aucun produit trouvé</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('produit_ajouter') }}" class="btn btn-primary">Ajouter un produit</a> 
    
{% endblock %}
