{% extends 'client_base.html.twig' %}


{% block title %}
Competitions
{% endblock %}

{% block page %}
 Competitions
 <div class="site-breadcrumb">
 <span class="sb-item"> -{{competition.nom}}</span>
 </div>
{% endblock %}

{% block body %}

<!-- About Page Trainer Section Begin -->
    <section class="about-page-trainer spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2>{{competition.nom}}</h2>
                            {% set today = "now"|date("Y-m-d") %}
                            {% if competition.date|date("Y-m-d") > today %}
                                <a href="{{ path('app_competition_view', {'id': competition.id}) }}" class="primary-btn text-end" style="color:white; width:220px;background-color: green;">JOIN</a>
                                <br>
                            {% endif %}
                            <iframe src="https://www.youtube.com/embed/{{competition.videourl}}" style="width: 680px;height: 400px;"></iframe>
                            <div class="trainer-social row" style="align-items: center;">
                                <h6 class="col text-start">Capacity:{{competition.capacite}}</h6>
                                <h6 class="col text-end">Date:{{ competition.date|date('Y-m-d') }}</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-sm-6">
                    <div class="single-trainer-item row" style="min-width: 1150px; min-height: 400px; max-width: 1150px; max-height: 400px; border-radius: 1px; border: 1px solid gray;">
                        <div class="trainer-text col" style="display: flex; flex-direction: column; justify-content: space-between;">
                            <div>
                                <span style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; max-height: 60px;">{{competition.description}}</span>
                            </div>
                            <div>
                                {% if competition.date|date("Y-m-d") < today %}
                                <h1>LeaderBoard</h1>
                                {% for reservation in topReservations %}
                                <h2>{{ reservation.fkClient.nom }} - Score: {{ reservation.score }}</h2>
                                {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- About Page Trainer Section End -->


{% endblock %}
