{% extends 'admin_base.html.twig' %}
{% block body %}
 <div class="container-fluid pt-4 px-4">
   <div class="row  bg-secondary rounded align-items-center justify-content-center mx-0">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Competitions Table</h6>
            <a href="{{ path('app_competition_add') }}"> <button type="button" class="btn btn-success m-2">ADD</button></a>
            <a href="{{ path('app_competition_stat') }}"> <button type="button" class="btn btn-info m-2">Statistics</button></a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Date</th>
                            <th scope="col">Description</th>
                            <th scope="col">Capacity</th>
                            <th scope="col">Organizer</th>
                            <th scope="col">Video</th>
                            <th scope="col">Modify</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for a in list %}
                        <tr>
                            <th scope="row">{{loop.index}}</th>
                            <td>{{a.nom}}</td>
                            <td>{{ a.date|date('Y-m-d') }}</td>
                            <td>{{a.description}}</td>
                            <td>{{a.capacite}}</td>
                            <td>{{a.fkOrganisateur.nom}}</td>
                            <td><a href="https://www.youtube.com/watch?v={{a.videourl}}" target="_blank">Video</a></td>
                            <td><a href="{{ path('app_competition_modify', {'id': a.id}) }}"><button type="button" class="btn btn-warning m-2">Modify</button></a></td>
                            <td><a href="{{ path('app_competition_delete', {'id': a.id}) }}"><button type="button" class="btn btn-danger m-2">Delete</button></a></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>
  
{% endblock %}