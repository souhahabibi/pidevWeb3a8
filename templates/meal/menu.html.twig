{% extends 'client_base.html.twig' %}
{% block title %}Meal menu {% endblock %}

{% block body %}

   
        <!--**********************************
            Content body start
        ***********************************-->
        <div style=padding:50px;">
            <div class="container-fluid">
               <div class="row page-titles">
					<ol class="breadcrumb">
					</ol>
                </div>
                <div class="row">
                 {% for meal in meals %}
                    <div class="col-lg-12 col-xl-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="row m-b-30">
                                    <div class="col-md-5 col-xxl-12">
                                        <div class="new-arrival-product mb-4 mb-xxl-4 mb-md-0">
                                            <div class="new-arrivals-img-contnent">
                                                <img class="img-fluid" src="{{ asset('uploads/image/' ~ meal.imageUrl ) }}" alt="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-xxl-12">
                                        <div class="new-arrival-content position-relative">
                                            <h4><a>{{ meal.name }}</a></h4>
                                            <div class="comment-review star-rating">
                                                
												<p class="price">calories:{{ meal.calories }}</p>
                                            </div>
                                            <p class="text-content">{{ meal.recipe }}</p>
                                          <a href="{{ path('show_ingredients_client', {'id': meal.id}) }}" class="btn btn-primary">show ingredients</a>
                                          <a href="{{ path('pdf', {'id': meal.id}) }}" class="btn btn-primary">export to pdf</a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
					</div>
					{% endfor %}
					
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
<div class="container py-5">
  <div class="d-flex justify-content-center">
{{ knp_pagination_render(meals) }}

</div>
</div>
{% endblock %}