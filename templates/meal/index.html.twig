{% extends 'coach_base.html.twig' %}

{% block title %}Meal index{% endblock %}
{% block body %}
    <h1>Meal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Recipe</th>
                <th>Calories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meal in meals %}
            <tr>
                <td>{{ meal.id }}</td>
                <td>{{ meal.name }}</td>
                <td> {% if meal.imageUrl %}
                            <img src="{{ asset('uploads/image/' ~ meal.imageUrl) }}" style="max-width: 100px; max-height: 100px;">
                        {% else %}
                            Pas d'image
                        {% endif %}</td>
                <td>{{ meal.recipe }}</td>
                <td>{{ meal.calories }}</td>
                <td>
                    <a href="{{ path('app_meal_show', {'id': meal.id}) }}">show</a>
                    <a href="{{ path('app_meal_edit', {'id': meal.id}) }}">edit</a>
                    <a href="{{ path('app_meal_show_ingredient_ingredient', {'id': meal.id}) }}">add ingredient</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_meal_new') }}">Create new</a>
{% endblock %}
